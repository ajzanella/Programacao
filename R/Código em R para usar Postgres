#entrar na base de dados
library(RPostgreSQL)
library(rpg)
pw <- {
  "***REMOVED***"
}
# loads the PostgreSQL driver
drv <- dbDriver("PostgreSQL")
# creates a connection to the postgres database
# note that "con" will be used later in each connection to the database
con <- dbConnect(drv, dbname = "***REMOVED***",
                 host = "***REMOVED***.***REMOVED***.net", port = 5432,
                 user = "***REMOVED***_readonly", password = pw)
rm(pw) # removes the password
 
 # deixar configurado que as tabelas são live."tabela"
dbGetQuery(con,'set search_path = "live";')
 
 
# check for the cartable
dbExistsTable(con, "Payables")

#retorna a tabela como data frame
rs<-dbGetQuery(con,'select * from "FeeCollections" limit 10')
